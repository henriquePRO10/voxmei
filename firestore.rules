rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{collection}/{document=**} {
      // Leitura e Deleção: O documento já deve pertencer ao usuário logado
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Criação: O novo documento que está sendo criado deve ter o userId igual ao usuário logado
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Atualização: O documento original era do usuário logado, e a edição não pode transferir a posse para outro usuário
      allow update: if request.auth != null && request.auth.uid == resource.data.userId && request.auth.uid == request.resource.data.userId;
    }
  }
}
