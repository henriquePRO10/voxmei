rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Diretriz: anexos de NF só podem ser lidos/criados/removidos pelo próprio usuário.
    // Isso permite substituir anexos (apaga o antigo) e remover ao desmarcar "possui NF".
    match /notas_fiscais/{userId}/{fileName=**} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /assinaturas/{userId}/{fileName=**} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
  }
}
